<html lang="es" class="no-js">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Streama</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="./assets/style.css">
    <link rel="icon" href="./assets/favicon.ico" type="image/x-icon">

</head>

<style>
    .login-page {
        background-image: url(/assets/bg.png);
    }
</style>
<body class="login-page">
    <div>
        <div id="login">
            <img class="auth-logo" src="./assets/logo.png" alt="Streama Logo">
            <div class="inner">
                <div class="ng-binding">
                    <div class="jumbotron m-3 p-3" style="border-radius:22px; color: white; background-color:rgba(0, 0, 0, 0.5);">
                            <h3 class="display-6">{{titulo}}</h3>
                            <hr class="my-10" style="background-color: white;">
                            <h6>{{mensaje}}</h6>
                            <div class="container">
                                <div class="row d-block">
                                    <p style="color: rgb(16, 235, 9);">
                                        {{advertencia}}
                                    </p>
                                </div>
                                {{{boton}}}
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="version" style="color: transparent;">Alfonso Gonz√°lez Zempoalteca</div>
    </div>
    <script type="text/javascript">
        (function() {
            document.forms['loginForm'].elements['username'].focus();
        })();
    </script>
</body>

</html>